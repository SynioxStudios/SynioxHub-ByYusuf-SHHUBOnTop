-- [[ SYNIOX MEGA PROJECT - V2 (RED GRADIENT EDITION) ]] --
local _0xK = "Syniox-X-Yusuf" 
local TweenService = game:GetService("TweenService")

local _0xCG = game:GetService("CoreGui")
local _0xSG = Instance.new("ScreenGui", _0xCG)
_0xSG.Name = "SynioxProjectV2"

-- Loader için Kırmızı -> Siyah Geçiş Fonksiyonu
local function AddRedGradient(parent)
    local grad = Instance.new("UIGradient", parent)
    grad.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0, Color3.fromRGB(150, 0, 0)), -- Üst taraf (Koyu Kırmızı)
        ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 0, 0))    -- Alt taraf (Tam Siyah)
    })
    grad.Rotation = 90 -- Yukarıdan aşağıya akış
end

