-- ==========================================
-- 2. BÖLÜM: LOADER (KIRMIZIDAN SİYAHA GEÇİŞLİ)
-- ==========================================
local LoaderFrame = Instance.new("Frame", _0xSG)
LoaderFrame.Size = UDim2.new(0, 400, 0, 280)
LoaderFrame.Position = UDim2.new(0.5, -200, -0.6, 0) 
LoaderFrame.BackgroundColor3 = Color3.fromRGB(255, 255, 255) -- Gradient için beyaz taban şart
LoaderFrame.Visible = false
LoaderFrame.Active = true
LoaderFrame.Draggable = true
LoaderFrame.ClipsDescendants = true
Instance.new("UICorner", LoaderFrame).CornerRadius = UDim.new(0, 12)
AddRedGradient(LoaderFrame) -- İŞTE BURASI: Kırmızıdan Siyaha Geçiş!

local LoaderStroke = Instance.new("UIStroke", LoaderFrame)
LoaderStroke.Color = Color3.fromRGB(150, 0, 0)
LoaderStroke.Thickness = 3

local LoaderTitle = Instance.new("TextLabel", LoaderFrame)
LoaderTitle.Text = "SYNIOX LOADER || V2"
LoaderTitle.Size = UDim2.new(1, 0, 0, 60)
LoaderTitle.TextColor3 = Color3.fromRGB(255, 255, 255) -- Başlık beyaz olsun ki kırmızı üstünde parlasın
LoaderTitle.BackgroundTransparency = 1
LoaderTitle.Font = Enum.Font.GothamBold
LoaderTitle.TextScaled = true
LoaderTitle.Parent = LoaderFrame

local function CreateSynioxBtn(name, pos, scriptURL)
    local btn = Instance.new("TextButton", LoaderFrame)
    btn.Text = name
    btn.Size = UDim2.new(0.9, 0, 0, 55)
    btn.Position = pos
    btn.BackgroundColor3 = Color3.fromRGB(20, 20, 20) -- Butonlar koyu kalsın ki tasarım patlasın
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Font = Enum.Font.GothamBold
    btn.TextScaled = true 
    Instance.new("UICorner", btn)
    
    local btnStroke = Instance.new("UIStroke", btn)
    btnStroke.Color = Color3.fromRGB(150, 0, 0)
    btnStroke.Thickness = 2

    btn.MouseButton1Click:Connect(function()
        btn.Text = "EXECUTING..."
        
        -- KÜÇÜLEREK KAPANMA
        local shrink = TweenService:Create(LoaderFrame, TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.In), {
            Size = UDim2.new(0, 0, 0, 0),
            Position = UDim2.new(0.5, 0, 0.5, 0)
        })
        shrink:Play()
        
        shrink.Completed:Connect(function()
            _0xSG:Destroy()
            pcall(function() loadstring(game:HttpGet(scriptURL))() end)
        end)
    end)
end

-- Script Seçeneklerin
CreateSynioxBtn("Syniox Farming", UDim2.new(0.05, 0, 0.23, 0), "https://raw.githubusercontent.com/SynioxStudios/SynioxPublic-SH-SynioxHub-ByYusuf-BestSC/refs/heads/main/Key.txt")
CreateSynioxBtn("Syniox Main Hub", UDim2.new(0.05, 0, 0.46, 0), "https://raw.githubusercontent.com/Link_Buraya_2")
CreateSynioxBtn("Syniox PvP Mode", UDim2.new(0.05, 0, 0.69, 0), "https://raw.githubusercontent.com/Link_Buraya_3")

-- ==========================================
-- 3. BÖLÜM: GEÇİŞLER
-- ==========================================
_0xSB.MouseButton1Click:Connect(function()
    if _0xKI.Text == _0xK then
        _0xSB.Text = "SUCCESS!"
        _0xSB.BackgroundColor3 = Color3.fromRGB(0, 150, 0)
        task.wait(0.5)
        
        local panelExit = TweenService:Create(_0xMF, TweenInfo.new(0.6, Enum.EasingStyle.Quart, Enum.EasingDirection.In), {Position = UDim2.new(0.5, -210, 1.2, 0)})
        panelExit:Play()
        
        panelExit.Completed:Connect(function()
            _0xMF.Visible = false
            LoaderFrame.Visible = true
            local loaderEntry = TweenService:Create(LoaderFrame, TweenInfo.new(0.8, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {Position = UDim2.new(0.5, -200, 0.5, -140)})
            loaderEntry:Play()
        end)
    else
        _0xSB.Text = "WRONG KEY!"
        _0xSB.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
        task.wait(1)
        _0xSB.Text = "SUBMIT KEY"
        _0xSB.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
    end
end)

_0xGK.MouseButton1Click:Connect(function()
    setclipboard("https://discord.gg/DbAU5Z6HPd")
    _0xGK.Text = "COPIED DISCORD!"
    task.wait(1.5)
    _0xGK.Text = "GET KEY"
end)
